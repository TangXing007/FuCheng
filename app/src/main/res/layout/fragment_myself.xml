<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingTop="25dp"
            android:background="@mipmap/myself_bj"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="270dp">
            <LinearLayout
                android:id="@+id/personal_center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <hml.come.fucheng.activity.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/user_avatar"
                    android:src="@drawable/head_nine"
                    android:layout_width="70dp"
                    android:layout_weight="1"
                    android:layout_height="70dp" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent">
                        <TextView android:textColor="@color/whrite"
                            android:text="普通用户"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                         <LinearLayout
                             android:layout_marginTop="10dp"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content">
                             <ImageView
                                 android:src="@mipmap/setting_phone"
                                 android:layout_width="17dp"
                                 android:layout_height="17dp" />
                             <TextView
                                 android:id="@+id/user_phone"
                                 android:textColor="@color/whrite"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content" />
                         </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@mipmap/uesr_setting"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="0dp" />
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@mipmap/tit55"
                        android:layout_width="15dp"
                        android:layout_weight="6"
                        android:layout_height="15dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2172b4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/dealer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/saleman4"
                        android:layout_width="17dp"
                        android:layout_height="17dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经销商登陆"
                        android:textColor="@color/whrite"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#2172b4"
                    android:layout_gravity="center"></LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/zi_yuan_fang"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/saleman4"
                        android:layout_width="17dp"
                        android:layout_height="17dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="资源方登陆"
                        android:textColor="@color/whrite"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bj"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="350dp">
            <LinearLayout
                android:id="@+id/help_center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@mipmap/tit52"
                    android:layout_width="17dp"
                    android:layout_weight="2"
                    android:layout_height="17dp"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="帮助中心"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tit56"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bj"/>
            <LinearLayout
                android:id="@+id/user_feedback"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@mipmap/tit53"
                    android:layout_width="17dp"
                    android:layout_weight="2"
                    android:layout_height="17dp"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="用户反馈"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tit56"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bj"/>
            <LinearLayout
                android:id="@+id/call_me"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@mipmap/tit51"
                    android:layout_width="17dp"
                    android:layout_weight="2"
                    android:layout_height="17dp"
                    />
                <LinearLayout
                    android:id="@+id/call_for_me"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="11"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="联系我们"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="400-808-2229"
                        android:textColor="@color/red"
                        android:layout_gravity="right|center_vertical"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bj"/>
            <LinearLayout
                android:id="@+id/clear_cache"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@mipmap/tit54"
                    android:layout_width="17dp"
                    android:layout_weight="2"
                    android:layout_height="17dp"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="清除缓存"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tit56"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bj"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_title"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/whrite"
        android:layout_width="300dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/tit42"
            android:layout_height="match_parent" />
        <EditText
            android:maxLength="11"
            android:id="@+id/forget_phone"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColorHint="@color/text"
            android:hint="手机号码"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/whrite"
        android:layout_width="300dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/tit13"
            android:layout_height="match_parent" />
        <EditText
            android:maxLength="6"
            android:id="@+id/forget_identifyingCode"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColorHint="@color/text"
            android:hint="验证码"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:textColor="@color/blue_h"
            android:textSize="14dp"
            android:text="获取验证码"
            android:id="@+id/has_identifyingCode"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/whrite"
        android:layout_width="300dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/tit13"
            android:layout_height="match_parent" />
        <EditText
            android:maxLength="12"
            android:inputType="textPassword"
            android:id="@+id/forget_password"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColorHint="@color/text"
            android:hint="请输入重置后的密码"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/whrite"
        android:layout_width="300dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/tit13"
            android:layout_height="match_parent" />
        <EditText
            android:maxLength="12"
            android:inputType="textPassword"
            android:id="@+id/forget_password_confirm"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColorHint="@color/text"
            android:hint="请确认密码"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/forget_land_button"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/whrite"
        android:text="登陆"
        android:background="@drawable/button_border2"
        android:layout_width="300dp"
        android:layout_height="50dp" />
</LinearLayout>
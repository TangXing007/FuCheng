<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/location_one"
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <TextView
            android:gravity="center_vertical"
            android:text="东区"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent" />
        <RadioButton
            android:clickable="false"
            android:id="@+id/lrb_one"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:checked="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Xhui"/>
    <LinearLayout
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/location_two"
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <TextView
            android:gravity="center_vertical"
            android:text="南区"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent" />
        <RadioButton
            android:clickable="false"
            android:id="@+id/lrb_two"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Xhui"/>
    <LinearLayout
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/location_three"
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <TextView
            android:gravity="center_vertical"
            android:text="西区"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent" />
        <RadioButton
            android:clickable="false"
            android:id="@+id/lrb_three"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Xhui"/>
    <LinearLayout
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/location_four"
        android:layout_width="match_parent"
        android:layout_height="62dp">
        <TextView
            android:gravity="center_vertical"
            android:text="北区"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent" />
        <RadioButton
            android:clickable="false"
            android:id="@+id/lrb_four"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
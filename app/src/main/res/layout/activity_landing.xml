<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/hui">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:textSize="17dp"
            android:id="@+id/title_text"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bj"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/logo"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/whrite"
        android:layout_width="300dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/principal"
            android:layout_height="match_parent" />
        <EditText
            android:maxLength="11"
            android:id="@+id/langding_phone"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColorHint="@color/text"
            android:hint="手机号码"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/whrite"
        android:layout_width="300dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/tit13"
            android:layout_height="match_parent" />
        <EditText
            android:maxLength="12"
            android:inputType="textPassword"
            android:id="@+id/landing_password"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColorHint="@color/text"
            android:hint="密码"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/landing_button"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/whrite"
        android:text="登陆"
        android:background="@drawable/button_border"
        android:layout_width="300dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/new_zhuce"
            android:textColor="@color/blue_h"
            android:text="新用户注册"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/remeber_password"
            android:gravity="right"
            android:layout_marginLeft="160dp"
            android:textColor="@color/blue_h"
            android:text="忘记密码？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>